      },
      {
        "type": "color",
        "id": "highlight_accent",
        "label": "Highlight accent",
        "default": "#c30010"
      },
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "select",
        "id": "page_width",
        "label": "Page width",
        "options": [
          {
            "label": "1200",
            "value": "1200px"
          },
          {
            "label": "1400",
            "value": "1400px"
          },
          {
            "label": "1600",
            "value": "1600px"
          },
          {
            "label": "Max",
            "value": "100%"
          }
        ],
        "default": "1600px"
      },
      {
        "type": "range",
        "id": "border_radius",
        "label": "Border radius",
        "min": 0,
        "max": 20,
        "unit": "px",
        "default": 8
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Shop logo"
      },
      {
        "type": "range",
        "id": "logo_width_desktop",
        "label": "Logo width desktop",
        "min": 100,
        "max": 300,
        "unit": "px",
        "default": 150,
        "step": 5
      },
      {
        "type": "range",
        "id": "logo_width_mobile",
        "label": "Logo width mobile",
        "min": 20,
        "max": 100,
        "unit": "px",
        "default": 50,
        "step": 5
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "header",
        "content": "Predictive search"
      },
      {
        "type": "checkbox",
        "id": "enable_product_search",
        "label": "Enable product search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_collection_search",
        "label": "Enable collection search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_articles_search",
        "label": "Enable articles search",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_pages_search",
        "label": "Enable pages search",
        "default": false
      },
      {
        "type": "collection",
        "id": "predictive_recommendations",
        "label": "Predictive search recommendations"
      },
      {
        "type": "link_list",
        "id": "predictive_side_menu",
        "label": "Predictive search side menu"
      },
      {
        "type": "range",
        "id": "predictive_recommendations_quantity",
        "label": "Predictive search recommendations quantity",
        "info": "Here you can set the quantity of products to show",
        "min": 2,
        "max": 8,
        "step": 2,
        "default": 4
      }
    ]
  },
  {
    "name": "Product Cards",
    "settings": [
      {
        "type": "select",
        "id": "product_card_image_ratio",
        "label": "Product card image ratio",
        "options": [
          {
            "value": "square",
            "label": "1:1"
          },
          {
            "value": "rectangle",
            "label": "4:5"
          },
          {
            "value": "original",
            "label": "Original Ratio"
          }
        ]
      }
    ]
  },
  {
    "name": "Currency Format",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_currency",
        "label": "Show currency",
        "info": "Check this to show currency on prices"
      }
    ]
  }
]
