    "settings": [
      {
        "type": "color",
        "id": "background_primary",
        "label": "Background primary",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "background_secondary",
        "label": "Background secondary",
        "default": "#f4f4f4"
      },
      {
        "type": "color",
        "id": "text",
        "label": "Text",
        "default": "#161b33"
      },
      {
        "type": "color",
        "id": "primary_button_background",
        "label": "Primary button background",
        "default": "#161b33"
      },
      {
        "type": "color",
        "id": "primary_button_text",
        "label": "Primary button text",
        "default": "#fffbf0"
