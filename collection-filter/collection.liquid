{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

{{ 'collection.css' | asset_url | stylesheet_tag }}
<script src="{{ 'collection-filters.js' | asset_url }}" defer></script>

<div class="collection">
  <h1>{{ collection.title }}</h1>

  <div class="collection-inner">
    <collection-filters class="collection-filters" data-section-id="{{ section.id }}">
      <div class="collection-filters__heading">
        <h2>Filters</h2>
      </div>

      <div class="collection-filters__active-filters">
      {%- for filter in collection.filters -%}
        {%- for value in filter.active_values -%}
          <div class="collection-filters__active-filter-swatch">
            <input data-remove-url="{{ value.url_to_remove }}" type="hidden" name="{{ filter.label | handle }}" value="{{ value.value | handle }}">
            <label for="{{ filter.label | handle }}-{{ value.value | handle }}" class="collection-filters__active-filter-swatch-label">{{ value.label }} X</label>
          </div>
          {%- endfor -%}
        {%- endfor -%}
      </div>

      <div class="collection-filters__content">
        {% for filter in collection.filters %}
          <div class="collection-filter">
            <accordion-toggle class="accordion">
              <div class="accordion__header">
                <span class="accordion__header-label">{{ filter.label }}</span>
                <span class="accordion__toggle-icon">
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12.5 6.5L8 11L3.5 6.5" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </span>
              </div>
              <div class="accordion__content">
                <div class="collection-filter__options">
                  {% if filter.type == 'list' or filter.type == 'boolean' %}
                    <div class="collection-filter__options-list">
                      {% for value in filter.values %}
                        {%- if filter.label == 'Color' -%}
                          <div class="collection-filter__option collection-filter__swatch collection-filter__swatch-color {% if value.count == 0 %}is-disabled{% endif %}">
                            <input
                              type="checkbox"
                              {% if value.active %}
                                checked
                              {% endif %}
                              id="{{ filter.label | handle }}-{{ value.value | handle }}"
                              name="{{ filter.label | handle }}"
                              value="{{ value.value | handle }}"
                              data-add-url="{{ value.url_to_add }}"
                              data-remove-url="{{ value.url_to_remove }}"
                            >
                            <label 
                              for="{{ filter.label | handle }}-{{ value.value | handle }}"
                              {% if value.swatch.color %}
                                style="background-color: {{ value.swatch.color }}"
                              {% elsif value.swatch.image %}
                                style="background-image: url({{ value.swatch.image | image_url: width: 100 }})"
                              {% else %}
                                style="background-color: {{ value.label }}"
                              {% endif %}
                            ></label>
                          </div>
                        {%- else -%}
                          <div class="collection-filter__option collection-filter__swatch {% if value.count == 0 %}is-disabled{% endif %}">
                            <input
                              type="checkbox"
                              {% if value.active %}
                                checked
                              {% endif %}
                              id="{{ filter.label | handle }}-{{ value.value | handle }}"
                              name="{{ filter.label | handle }}"
                              value="{{ value.value | handle }}"
                              data-add-url="{{ value.url_to_add }}"
                              data-remove-url="{{ value.url_to_remove }}"
                            >
                            <label for="{{ filter.label | handle }}-{{ value.value | handle }}">
                              {% if filter.type == 'boolean' %}
                                {{ value.label }}
                              {% else %}
                                {{ value.value }}
                              {% endif %}
                            </label>
                          </div>
                        {%- endif -%}
                      {% endfor %}
                    </div>
                  {% else %}
                    <div class="collection-filter__options-price-range">
                      {% if filter.min_value.value %}
                        {%- assign min_value = filter.min_value.value | divided_by: 100.0 -%}
                      {% else %}
                        {%- assign min_value = 0.0 -%}
                      {% endif %}

                      {% if filter.max_value.value %}
                        {%- assign max_value = filter.max_value.value | divided_by: 100.0 -%}
                      {% else %}
                        {%- assign max_value = filter.range_max | divided_by: 100.0 -%}
                      {% endif %}

                      <div class="collection-filter__option">
                        <div class="collection-filter__price-range">
                          <input
                            data-min-value
                            type="range"
                            id="{{ filter.min_value.param_name }}"
                            name="{{ filter.min_value.param_name }}"
                            min="0"
                            max="{{ filter.range_max | divided_by: 100 | round | plus: 1 }}"
                            value="{{ min_value }}"
                            data-param="{{ filter.min_value.param_name }}"
                            class="collection-filter__price-range-input-min"
                          >
                          <input
                            data-max-value
                            type="range"
                            id="{{ filter.max_value.param_name }}"
                            name="{{ filter.max_value.param_name }}"
                            min="0"
                            max="{{ filter.range_max | divided_by: 100 | round | plus: 1 }}"
                            value="{{ max_value }}"
                            data-param="{{ filter.max_value.param_name }}"
                            class="collection-filter__price-range-input-max"
                          >
                          <div class="collection-filter__price-range-track"></div>
                        </div>
                        <div class="collection-filter__price-range-values">
                          <span class="collection-filter__option-value" data-min-value-display>
                            {{- min_value | times: 100 | money | split: '.' | first -}}
                          </span>
                          <span class="collection-filter__option-value" data-max-value-display>
                            {{- max_value | times: 100 | money | split: '.' | first -}}
                          </span>
                        </div>
                      </div>
                    </div>
                  {% endif %}
                </div>
              </div>
            </accordion-toggle>
          </div>
        {% endfor %}
      </div>
    </collection-filters>

    <div class="collection-grid">
      <div class="collection-products" style="--grid-gap: {{ section.settings.grid_gap }}px">
        {% for product in collection.products %}
          <div class="collection-product">
            {% if product.featured_image %}
              {{ product.featured_image | image_url: width: 400 | image_tag: class: 'collection-product__image' }}
            {% endif %}
            <div class="collection-product__content">
              <a href="{{ product.url }}" class="collection-product__title">{{ product.title | escape }}</a>
              <p>{{ product.price | money }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collection",
  "settings": [
    {
      "type": "range",
      "id": "grid_gap",
      "label": "Grid Gap",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 10
    }
  ]
}
{% endschema %}
